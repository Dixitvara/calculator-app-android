<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/smallDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:gravity="end"
        android:padding="10dp"
        android:text=""
        android:textSize="35sp" />

    <TextView
        android:id="@+id/bigDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/numLayout"
        android:layout_marginVertical="30dp"
        android:gravity="end"
        android:padding="10dp"
        android:text=""
        android:textSize="60sp" />

    <LinearLayout
        android:id="@+id/numLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ECF5FD"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/allClear"
                android:stateListAnimator="@null"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20sp"
                android:backgroundTint="@color/gray"
                android:text="@string/ac"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/plusOrMinus"
                android:stateListAnimator="@null"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/gray"
                android:text="+/-"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modulo"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/gray"
                android:text="%"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/gray"
                android:text="C"
                android:textSize="20sp"
                app:cornerRadius="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_7"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:stateListAnimator="@null"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20sp"
                android:backgroundTint="@color/dark_gray"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_8"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/dark_gray"
                android:stateListAnimator="@null"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_9"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:stateListAnimator="@null"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/dark_gray"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/orange"
                android:text="Ã—"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_4"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:stateListAnimator="@null"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20sp"
                android:backgroundTint="@color/dark_gray"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_5"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:stateListAnimator="@null"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/dark_gray"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_6"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:stateListAnimator="@null"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/dark_gray"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/subtraction"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/orange"
                android:text="-"
                android:stateListAnimator="@null"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:cornerRadius="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_1"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:stateListAnimator="@null"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20sp"
                android:backgroundTint="@color/dark_gray"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_2"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:stateListAnimator="@null"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/dark_gray"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_3"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:stateListAnimator="@null"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/dark_gray"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addition"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/orange"
                android:text="+"
                android:textColor="@color/white"
                android:stateListAnimator="@null"
                android:textSize="19sp"
                app:cornerRadius="100dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:stateListAnimator="@null"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20sp"
                android:backgroundTint="@color/dark_gray"
                android:text="."
                android:textColor="@color/white"
                android:textSize="25sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_0"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:stateListAnimator="@null"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/dark_gray"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/divide"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Secondary"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/orange"
                android:stateListAnimator="@null"
                android:text="@string/divide"
                android:textColor="@color/white"
                android:textSize="21sp"
                app:cornerRadius="100dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equals"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Secondary"
                android:layout_width="70dp"
                android:stateListAnimator="@null"
                android:layout_height="70dp"
                android:layout_marginRight="20sp"
                android:backgroundTint="@color/orange"
                android:text="="
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="100dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>